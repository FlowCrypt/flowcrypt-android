<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/padding_pgp_message_error_big"
    android:paddingTop="@dimen/padding_pgp_message_error_small"
    android:paddingRight="@dimen/padding_pgp_message_error_big"
    android:paddingBottom="@dimen/padding_pgp_message_error_small">

    <item android:gravity="left">
        <shape>
            <solid android:color="?attr/colorSurface" />
        </shape>
    </item>

    <item>
        <!--this one will be updated programmatically to use SVG-->
        <shape>
            <solid android:color="?attr/colorSurface" />
        </shape>
    </item>

    <item android:gravity="left">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/default_single_dip"
                android:color="?attr/colorSurface" />
        </shape>
    </item>

    <item android:gravity="left">
        <shape>
            <size android:width="@dimen/width_pgp_message_type_line" />
            <solid android:color="@color/red" />
        </shape>
    </item>
</layer-list>
